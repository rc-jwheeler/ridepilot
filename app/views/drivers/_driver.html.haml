%tr
  - driver_overdue_check = get_driver_warnings(driver)
  %td{class: driver_overdue_check[:class_name], title: driver_overdue_check[:tips] }
    = link_to_if can?(:read, driver), driver.user_name, driver
  %td
    = driver.active_status_text
  %td
    = driver.paid? ? translate_helper("driver_paid") : translate_helper("volunteer")
  %td
    = !driver.active? ? translate_helper("n_a") : (driver.available? ? translate_helper("driver_available") : translate_helper("driver_unavailable"))
  %td
    = driver.compliant? ? translate_helper("no") : translate_helper("yes")
  %td
    = number_with_precision(driver.run_hours, precision: 2, strip_insignificant_zeros: true)
