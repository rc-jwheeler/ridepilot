#addDonationDialog.modal.fade.col-sm-12{:role => "dialog", "aria-hidden" => 'true', :tabindex => "-1"}
  .modal-dialog
    .modal-content
      = form_for Donation.new, :url=>'#' do |f|
        .modal-header
          .pull-right
            = button_tag translate_helper(:ok), type: :submit, style: "margin-right: 5px;", class: "btn action-button"
            = button_tag class: 'btn action-button', data: {dismiss: 'modal'} do
              = translate_helper(:cancel)
          .modal-title{:style => "text-align:left;"}
            %strong
              = translate_helper(:add_donation_dialog_title)
        .modal-body.row{:style => "text-align:left;"}
          .form-group.col-sm-12
            .form-label
              = f.label :date, translate_helper("donation_date")
            .form-field
              .input-group.datepicker-icon
                = f.text_field :date, :value => format_time_for_listing_day(Time.current), class: 'datepicker form-control', readonly: true
                .input-group-btn
                  %button.btn.btn-default{:type => "button"}
                    = image_tag "calendar-clock.png"
          .form-group.col-sm-12
            .form-label
              = f.label :amount, translate_helper(:donation_amount) 
            .form-field
              = f.number_field :amount, min: 0, step: 0.01, size: 8, required: true, class: 'form-control'
          .form-group.col-sm-12
            .form-label
              = f.label :notes, translate_helper(:donation_notes) 
            .form-field
              = f.text_area :notes, class: 'form-control'

