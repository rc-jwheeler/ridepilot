<div id="page-header" class="clearfix">
  <h1><%= translate_helper("reconcile_cab_log") %></h1>
</div>

<table>
  <tr>
    <th><%= translate_helper("pickup_time") %></th>
    <th><%= translate_helper("customer") %></th>
    <th><%= translate_helper("pickup_address") %></th>
    <th><%= translate_helper("dropoff_address") %></th>
    <th><%= translate_helper("trip_result") %></th>
    <th></th>
  </tr>

  <% @trips.each do |trip| %>
    <tr>
      <td><%= trip.pickup_time.to_s %></td>
      <td><%= trip.customer.name %></td>
      <td><%= trip.pickup_address.text %></td>
      <td><%= trip.dropoff_address.text %></td>
      <td><%= display_trip_result trip.trip_result %></td>

      <td><%= button_to translate_helper("mark_as_no_show", trip_no_show_path(trip)) %></td>

    </tr>
  <% end %>
</table>

<%= will_paginate @trips %>

<br />
