<div id="page-header">
  <h1>Editing cab trips for <%= @week_start.strftime "%m-%d-%Y" %></h1>
</div>

<%= form_tag update_multiple_cab_trips_path, :method => :put do %>
  <table id="cab_trips">
    <tr class="head">
      <th>Pickup Time</th>
      <th>Customer Name</th>
      <th>In Distict?</th>
      <th>Purpose</th>
      <th>Round Trip?</th>
      <th>Guest Count</th>
      <th>Attendant Count</th>
      <th>Result</th>
      <th></th>
    </tr>
    <% if @cab_trips.size > 0 %>
      <% @cab_trips.each do |trip| %>
        <%= fields_for 'cab_trips[]', trip do |trip_fields| %>
          <%= render :partial => 'trips/trip_form', :locals => {:trip_fields => trip_fields, :trip => trip, :show_edit_run_link => false} %>
        <% end %>
      <% end %>
    <% else %>
      <tr><td colspan="9">No cab trips on this date</td></th>
    <% end %>
  </table>
  <div class="actions">
    <%= submit_tag "Update cab trips" %>
  </div>
<% end %>